@model BookSmash.Models.AdminModel

@{
    ViewBag.Title = "DeleteAdmin";
}

@using (Html.BeginForm("RemoveAdmin", "Admin", FormMethod.Post, new { role = "form" }))
{
    <br />
    <p>

        As admin you may enter a admin to demote to user status. Please fill out the required form below:
    </p>
    <p style="color:red">@ViewBag.EmptyFielsAdnminEntry</p>
    <br />
    <table>
        <tr>
            <td>User Email:</td>
            <td>@Html.TextBoxFor(model => model.UserEmail, new { @class = "form-control" })</td>
            <td style="color:red">@ViewBag.InvalidEmail</td>
        </tr>
    </table>
    <br />
    <input type="submit" class="btn btn-default" value="Demote Admin" />
    <br />
    <p>@ViewBag.AdminSubmitMessage</p>
    <br />
}


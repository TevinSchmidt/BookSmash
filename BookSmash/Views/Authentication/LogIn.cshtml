
<script type="text/javascript" src="~/Scripts/Authentication/AuthenticationFunctions.js"></script>

@model BookSmash.Models.LoginModel

@{
    ViewBag.Title = "LogIn";
}

<br />
@ViewBag.SuccessfullyCreated
<p> </p>
<p> </p>
<br />

@using (Html.BeginForm("LogIn", "Authentication", FormMethod.Post, new { role = "form" }))
{
    <table>
        <tr>
            <td>Email:</td>
            <td>@Html.TextBoxFor(model => model.Email, new { @class = "form-control" })</td>
            <td style="color:red">@ViewBag.InvalidEmail</td>
        </tr>
        <tr>
            <td>Password:</td>
            <td>@Html.PasswordFor(model => model.Password, new { @class = "form-control" })</td>
            <td style="color:red">@ViewBag.InvalidPassword</td>
        </tr>
    </table>
    <br />
    <p style="color:red">@ViewBag.LogInError</p>
    <br />
    <input type="submit" class="btn btn-default" value="Log In" />
    <br />


}
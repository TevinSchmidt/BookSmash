<script type="text/javascript" src="~/Scripts/Authentication/AuthenticationFunctions.js"></script>
@model BookSmash.Models.AccountCreation

@{
    ViewBag.Title = "AccountCreation";
}

<h2>Account Creation</h2>

@using (Html.BeginForm("CreationSubmittion", "Authentication", FormMethod.Post, new { role = "form" }))
{
    <p>
        The following personal information is required to make an account. Your email address will act as your
        username on BookSmash:
    </p>
    <p style="color:red">@ViewBag.EmptyFields</p>
    <br />
    <table>
        <tr>
            <td>Email:</td>
            <td>@Html.TextBoxFor(model => model.Email, new { @class = "form-control" })</td>
            <td style="color:red">@ViewBag.InvalidEmail</td>
        </tr>
        <tr>
            <td>Password:</td>
            <td>@Html.PasswordFor(model => model.Password, new { @class = "form-control" })</td>
            <td style="color:red">@ViewBag.PasswordDontMatch</td>
        </tr>
        <tr>
            <td>Confirm Password:</td>
            <td>@Html.PasswordFor(model => model.confirmPassword, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>First Name:</td>
            <td>@Html.TextBoxFor(model => model.Fname, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>Last Name:</td>
            <td>@Html.TextBoxFor(model => model.Lname, new { @class = "form-control"})</td>
        </tr>
        <tr>
            <td>Phone Number:</td>
            <td>@Html.TextBoxFor(model => model.Phone_Num, new { @class = "form-control" })</td>
            <td style="color:red">@ViewBag.InvalidPhone</td>
        </tr>
    </table>
    <br />

    <p>The following information about university is used to optimize searches and buyers to be able to find your textbook:</p>
    <p style="color:red">@ViewBag.InvalidUNI</p>
    <br />
    <table>
        <tr>
            <td>University Name:</td>
            <td>@Html.DropDownListFor(model => model.University, Model.Universities, "-Please Select University-", new { @class = "form-control" })</td>
        </tr>
    </table>
    <br />
    <input type="submit" class="btn btn-default" value="Create Account" />
    <br />
    <p>@ViewBag.CreationMessage</p>
    <br />
}
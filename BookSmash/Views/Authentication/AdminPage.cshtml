
@modelAdminEntry BookSmash.Models.AdminEntryModel
@model BookSmash.Models.UniEntryModel
@{
    ViewBag.Title = "AdminPage";
}

<br />

@using (Html.BeginForm("UniEntry", "Authentication", FormMethod.Post, new { role = "form" }))
{
    <br />
    <p>

        As admin you may enter a university. Please fill out the required form below:
    </p>
    <p style="color:red">@ViewBag.EmptyFields</p>
    <br />
    <table>
        <tr>
            <td>University Name:</td>
            <td>@Html.TextBox("UNI_NAME")@Html.TextBoxFor(modelAdminEntry => modelAdminEntry.Email, new { @class = "form-control" })</td>
            <td style="color:red">@ViewBag.InvalidUni</td>
        </tr>
        <tr>
            <td>City:</td>
            <td>@Html.TextBox("City")</td>
        </tr>
        <tr>
            <td>Province/State:</td>
            <td>@Html.TextBox("Prov_State")</td>
            <td style="color:red">@ViewBag.InvalidProv</td>
        </tr>
        <tr>
            <td>Country:</td>
            <td>@Html.TextBox("Country")</td>
        </tr>
    </table>
    <br />
    <input type="submit" value="Create University" />
    <br />
    <p>@ViewBag.UniSubmitMessage</p>
    <br />
}

<br />

@using (Html.BeginForm("AdminEntry", "Authentication", FormMethod.Get,
    new { id = "accountCreationForm" }))
{
    <br />
    <p>

        As Admin you may enter a user to promote to Admin status. Please fill out the required form below:
    </p>
    <p style="color:red">@ViewBag.EmptyFielsAdnminEntry</p>
    <br />
    <table>
        <tr>
            <td>User Email:</td>
            <td>@Html.TextBox("UserEmail")</td>
            <td style="color:red">@ViewBag.UserDoesNotExist</td>
        </tr>
        <tr>
            <td>Role:</td>
            <td>@Html.TextBox("Role")</td>
            <td>*(Admin, CEO, ect.)</td>
        </tr>
    </table>
    <br />
    <input type="submit" value="Create Admin" />
    <br />
    <p>@ViewBag.AdminSubmitMessage</p>
    <br />
}
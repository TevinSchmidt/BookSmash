
@model BookSmash.Models.ReviewModel

@{
    ViewBag.Title = "ReviewUser";
}

@using BookSmash.Models

@using (Html.BeginForm("AddReview", "Post", FormMethod.Post, new { role = "form" }))
{
    <br />
    <p>

       You can leave a review of the poster here. It is important to note that this is a review of the seller and not 
        the books content. 
    </p>
    <p style="color:red">@ViewBag.EmptyFields</p>
    <br />
    <table>
        <tr>
            <td>Your Email:</td>
            <td>@Html.TextBoxFor(model => model.Reviewer_Email, new { @class = "form-control" })</td>
            <td style="color:red">@ViewBag.InvalidEmail</td>
        </tr>
        <tr>
            <td>Description:</td>
            <td>@Html.TextAreaFor(model => model.Description, new { @class = "form-control" })</td>
            <td style="color:red">@ViewBag.DescriptionLengthError</td>
        </tr>
        <tr>
            <td>Rating:</td>
            <td>@Html.DropDownListFor(model => model.Rating, new SelectList(Enum.GetValues(typeof(ratings))), "-Please Select A Rating-", new { @class = "form-control" })</td>
            <td>(1-lowest and 5-best)</td>
        </tr>
    </table>
    <br />
    <input type="submit" class="btn btn-default" value="Submit Review" />
    <br />
    <p>@ViewBag.UniSubmitMessage</p>
    <br />
}

<br />